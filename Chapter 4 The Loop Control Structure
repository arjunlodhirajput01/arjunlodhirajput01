// Write a program for prime numbers between 1 and 50:

#include<stdio.h>
#include<math.h>
int main()
{
int i,j;
printf("%d\n", 2);
for(i=3; i<=50; i++){
    for(j=2; j<i; j++)
    {
        if(i%j==0)
        break;
        if(sqrt(i))
        {
            printf("%d\n", i);
            break;
        }
    }
}
}

